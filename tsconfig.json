{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "common-lib": [
        "dist/common-lib/common-lib",
        "dist/common-lib"
      ],
      "common-input": [
        "dist/common-input/common-input",
        "dist/common-input"
      ],
      "common-button": [
        "dist/common-button/common-button",
        "dist/common-button"
      ]
    }
  }
}